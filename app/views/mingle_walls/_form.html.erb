<%= form_for [@wall, @mingle_wall], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :login, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :login, :class => 'text_field' %>
    </div>
  </div>
  <%- if @mingle_wall.password -%>
  <div class="control-group">
    <label class='control-label'>Password</label>
    <div class="controls">
      <input class="text_field" type="password" value="******" disabled/>
    </div>
  </div>
  <%- end -%>
  <div class="control-group">
    <%= f.label :password, "New Password", :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), wall_path(@wall), :class => 'btn' %>
  </div>
<% end %>
